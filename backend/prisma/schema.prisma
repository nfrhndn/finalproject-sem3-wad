generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int       @id @default(autoincrement())
  name       String
  email      String    @unique
  password   String
  role       String    @default("USER")
  createdAt  DateTime  @default(now())
  bookings   Booking[]
  profile    Profile?  @relation("UserProfile")
}

model Admin {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


model Booking {
  id             Int      @id @default(autoincrement())
  userId         Int
  movieId        Int
  title          String
  poster         String?
  cinema         String
  date           String
  time           String
  seats          String
  price          Float
  total          Float
  bookingCode String @default(uuid()) @unique
  paymentMethod  String
  createdAt      DateTime @default(now())

  user           User     @relation(fields: [userId], references: [id])
}

model Profile {
  id            Int       @id @default(autoincrement())
  userId        Int       @unique
  user          User      @relation("UserProfile", fields: [userId], references: [id])
  fullName      String
  language      String     @default("Bahasa Indonesia")
  paymentMethod String?
  avatar        String?
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
}

// ==============================
// MODEL: Genre
// ==============================
model Genre {
  id      Int           @id @default(autoincrement())
  name    String         @unique
  movies  MovieGenre[]
}

// ==============================
// MODEL: Movie
// ==============================
model Movie {
  id           Int           @id @default(autoincrement())
  tmdbId       Int?          @unique
  title        String
  description  String?        @default("Deskripsi tidak tersedia.")
  duration     Int?
  releaseDate  DateTime?
  posterUrl    String?
  backdropUrl  String?        // background poster TMDB
  trailerUrl   String?  
  source       String?        @default("TMDB")

  // Status film dan publikasi
  status       MovieStatus    @default(DRAFT)
  isPublished  Boolean        @default(false)

  // Relasi many-to-many ke Genre
  genres       MovieGenre[]

  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
}

// ==============================
// MODEL: Pivot Movie <-> Genre
// ==============================
model MovieGenre {
  movieId  Int
  genreId  Int
  movie    Movie @relation(fields: [movieId], references: [id])
  genre    Genre @relation(fields: [genreId], references: [id])

  @@id([movieId, genreId])
}

// ==============================
// ENUM: Status Film
// ==============================
enum MovieStatus {
  DRAFT       
  PUBLISHED   
  UPCOMING    
  ARCHIVED    
}
